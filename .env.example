# 南海舆情报告生成系统 - 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置值

# =============================================================================
# 数据库配置 (Supabase)
# =============================================================================
# 在 https://supabase.com 创建项目后获取以下信息
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# AI服务配置 (Dify)
# =============================================================================
# 在 Dify 平台创建应用后获取API密钥
DIFY_API_KEY=app-your-dify-api-key-here
DIFY_BASE_URL=https://api.dify.ai/v1

# =============================================================================
# 应用基础配置
# =============================================================================
# 调试模式 (生产环境设为false)
DEBUG=false

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 应用端口
PORT=8000

# =============================================================================
# 存储目录配置
# =============================================================================
# 文件上传目录
UPLOAD_DIR=./uploads

# 报告生成目录
REPORTS_DIR=./reports

# 模板文件目录
TEMPLATES_DIR=./templates

# 日志文件目录
LOGS_DIR=./logs

# 缓存目录
CACHE_DIR=./cache

# =============================================================================
# 跨域配置 (CORS)
# =============================================================================
# 允许访问的域名，多个域名用逗号分隔
# 开发环境
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080
# 生产环境示例
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# 安全配置
# =============================================================================
# JWT密钥 (可选，如果需要用户认证)
# JWT_SECRET_KEY=your-very-secure-secret-key-here

# 会话密钥
# SESSION_SECRET=your-session-secret-here

# =============================================================================
# 文件上传配置
# =============================================================================
# 最大文件大小 (字节，默认100MB)
MAX_FILE_SIZE=104857600

# 允许的文件类型
ALLOWED_FILE_TYPES=.csv,.xlsx,.xls

# =============================================================================
# 缓存配置
# =============================================================================
# 缓存类型 (memory, redis)
CACHE_TYPE=memory

# Redis配置 (如果使用Redis缓存)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# 邮件配置 (可选，用于错误通知)
# =============================================================================
# SMTP服务器配置
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM_EMAIL=your_email@gmail.com

# =============================================================================
# 监控和日志配置
# =============================================================================
# Sentry错误监控 (可选)
# SENTRY_DSN=https://your-sentry-dsn-here

# 日志文件最大大小 (MB)
LOG_MAX_SIZE=10

# 日志文件保留数量
LOG_BACKUP_COUNT=5

# =============================================================================
# 性能配置
# =============================================================================
# 工作进程数 (推荐设置为CPU核心数)
WORKERS=4

# 每个进程的线程数
THREADS=2

# 请求超时时间 (秒)
TIMEOUT=300

# =============================================================================
# 备份配置 (可选)
# =============================================================================
# 自动备份启用
# BACKUP_ENABLED=true

# 备份目录
# BACKUP_DIR=./backups

# 备份保留天数
# BACKUP_RETENTION_DAYS=30

# =============================================================================
# 第三方服务配置
# =============================================================================
# 对象存储配置 (可选，如阿里云OSS、AWS S3等)
# OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
# OSS_ACCESS_KEY_ID=your_access_key_id
# OSS_ACCESS_KEY_SECRET=your_access_key_secret
# OSS_BUCKET_NAME=your_bucket_name

# =============================================================================
# Docker部署专用配置
# =============================================================================
# 容器内部端口 (通常不需要修改)
CONTAINER_PORT=8000

# 健康检查间隔 (秒)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# SSL/TLS配置 (生产环境)
# =============================================================================
# SSL证书文件路径
# SSL_CERT_PATH=/etc/ssl/certs/your_domain.crt
# SSL_KEY_PATH=/etc/ssl/private/your_domain.key

# 强制HTTPS
# FORCE_HTTPS=true